@using Microsoft.AspNetCore.Identity
@using Web.Db

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if(SignInManager.IsSignedIn(User))
{
    <a class="btn_submit btn_manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-cog"></i><span>Manage</span></a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { })">
        <button id="logout" type="submit" class="btn_submit">
            <i class="fa fa-check"></i><span>Logout</span>
        </button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}