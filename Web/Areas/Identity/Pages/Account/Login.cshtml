@page
@using Web.Snippets
@using Web.Snippets.Microsoft.AspNetCore.Mvc.Rendering
@model LoginModel

@section header{
    @await Html.PartialAsync("_Header")
}

<main>
    <div class="title_area">
        <h1>Login</h1>
    </div>
    
    <form method="post" class="modalsubmit">
        @Html.AntiForgeryToken()

        <fieldset class="top">
            <legend>Enter Details</legend>
            <div>
                @Html.LabelsFor(m => m.Input.Email)
                @Html.TextBoxFor(m => m.Input.Email)
                @Html.HtmlValidationMessageFor(m => m.Input.Email)
            </div>
            <div>
                @Html.LabelsFor(m => m.Input.Password)
                @Html.PasswordFor(m => m.Input.Password)
                @Html.HtmlValidationMessageFor(m => m.Input.Password)
            </div>
            <div>
                @Html.LabelsFor(m => m.Input.RememberMe)
                @Html.CheckBoxFor(m => m.Input.RememberMe)
            </div>
        </fieldset>

        @Html.HtmlValidationSummary(false)
        
        <div>
            <button class="btn_submit" type="submit">
                <i class="fa fa-check"></i><span>Login</span>
            </button>
        </div>

    </form>
    
    <div>
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
        <p>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div>

</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScripts")
    
    <script>
        (function () {
            Help.setupBackendApp();
        })();
    </script>
}
