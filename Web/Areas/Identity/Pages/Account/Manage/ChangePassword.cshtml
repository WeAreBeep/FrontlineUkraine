@page
@using Web.Snippets
@using Web.Snippets.Microsoft.AspNetCore.Mvc.Rendering
@model ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage"/>

<form method="post" class="modalsubmit">
    @Html.AntiForgeryToken()

    <fieldset class="top">
        <legend>Change Password</legend>
        <div>
            @Html.LabelsFor(m => m.Input.OldPassword)
            @Html.PasswordFor(m => m.Input.OldPassword)
            @Html.HtmlValidationMessageFor(m => m.Input.OldPassword)
        </div>
        <div>
            @Html.LabelsFor(m => m.Input.NewPassword)
            @Html.PasswordFor(m => m.Input.NewPassword)
            @Html.HtmlValidationMessageFor(m => m.Input.NewPassword)
        </div>
        <div>
            @Html.LabelsFor(m => m.Input.ConfirmPassword)
            @Html.PasswordFor(m => m.Input.ConfirmPassword)
            @Html.HtmlValidationMessageFor(m => m.Input.ConfirmPassword)
        </div>

    </fieldset>

    @Html.HtmlValidationSummary(false)

    <div>
        <button class="btn_submit" type="submit">
            <i class="fa fa-check"></i><span>Change Password</span>
        </button>
    </div>

</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScripts")

    <script>
        (function() {
            Help.setupBackendApp();
        })();
    </script>
}
